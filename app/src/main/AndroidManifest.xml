<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.enjoyflowers.shop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.impl.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.impl.CategoryListActivity" />
        <activity android:name=".view.impl.MainMenuActivity" />
        <activity
            android:name=".view.impl.BaseActivity"
            android:label="@string/title_activity_base" />
        <activity android:name=".view.impl.ProductViewActivity" />
        <activity android:name=".view.impl.CartViewActivity" />
        <activity android:name=".view.impl.OrderActivity"></activity>
    </application>

</manifest>